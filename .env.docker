# ===================================
# WBS v2 Docker Production Environment
# ===================================
# Copy this file to .env and configure for your production environment

# Application
APP_NAME="WBS Kota Bontang"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://your-domain.com

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
APP_TIMEZONE=Asia/Makassar

BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database (Docker MySQL Service)
DB_CONNECTION=mysql
DB_HOST=wbs-mysql
DB_PORT=3306
DB_DATABASE=wbs_v2
DB_USERNAME=wbs_user
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# MySQL Root Password (for docker-compose)
DB_ROOT_PASSWORD=CHANGE_THIS_ROOT_PASSWORD_IN_PRODUCTION

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Queue (Database-backed)
QUEUE_CONNECTION=database

# Cache (Database-backed, can switch to Redis for better performance)
CACHE_STORE=database
# CACHE_PREFIX=

# Redis (Optional - Uncomment to use Redis for cache/session/queue)
# CACHE_STORE=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis
REDIS_CLIENT=phpredis
REDIS_HOST=wbs-redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (Configure for production)
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_FROM_ADDRESS="wbs@bontangkota.go.id"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# WBS API Key (for SuperApps integration)
# Generate with: openssl rand -base64 32
WBS_API_KEY=CHANGE_THIS_API_KEY_IN_PRODUCTION

# Google reCAPTCHA
RECAPTCHA_ENABLED=true
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Vite
VITE_APP_NAME="${APP_NAME}"

# ===================================
# SECURITY NOTES:
# ===================================
# 1. Generate secure passwords:
#    openssl rand -base64 32
#
# 2. NEVER commit this file with real credentials to Git
#
# 3. Required changes before deployment:
#    - DB_PASSWORD
#    - DB_ROOT_PASSWORD
#    - WBS_API_KEY
#    - MAIL_HOST, MAIL_USERNAME, MAIL_PASSWORD
#    - RECAPTCHA_SITE_KEY, RECAPTCHA_SECRET_KEY
#    - APP_URL (your domain)
#
# 4. After copying to .env, run:
#    docker-compose exec wbs-app php artisan key:generate --force
