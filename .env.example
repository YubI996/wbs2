# ===========================================
# WBS v2 - Environment Configuration
# ===========================================

# Application
APP_NAME="WBS Kota Bontang"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:8080
APP_PORT=8080

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID
APP_TIMEZONE=Asia/Makassar

BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=error

# Database (Docker)
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=wbs_v2
DB_USERNAME=wbs_user
DB_PASSWORD=
DB_ROOT_PASSWORD=

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Queue & Cache
QUEUE_CONNECTION=database
CACHE_STORE=database
FILESYSTEM_DISK=local

# Redis (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null

# Mail (configure for production)
MAIL_MAILER=log
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="wbs@example.com"
MAIL_FROM_NAME="${APP_NAME}"
